@model OrderViewModel

<form method="post" asp-antiforgery="true" asp-action="CheckOut">
	<div class="col-sm-6">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label asp-for="Name" class="sr-only"></label>
			<input asp-for="Name" class="form-control" placeholder="@nameof(Model.Name)" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Phone" class="sr-only"></label>
			<input asp-for="Phone" class="form-control" placeholder="@nameof(Model.Phone)" />
			<span asp-validation-for="Phone" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Address" class="sr-only"></label>
			<input asp-for="Address" class="form-control" placeholder="@nameof(Model.Address)" />
			<span asp-validation-for="Address" class="text-danger"></span>
		</div>
	</div>
	<div class="col-sm-6">
		@{
			ViewData.TryGetValue("TotalPrice", out var totalPrice);
		 }
		<div class="total_area">
			@if (totalPrice is decimal price and > 0)
			{
			<ul>
				<li>Tax: 0</li>
				<li>Delivery: 0</li>
				<li>Totally: <span>@price.ToString("C")</span></li>
			</ul>
			<input type="submit" value="Submit" class="btn btn-default check_out" />
			}
		</div>
	</div>
</form>


