@model OnlineShop.ViewModels.EmployeeViewModel

@{
	Layout = "_EmployeeLayout";
	ViewData["Title"] = $"Employee id : {Model.Id}";
}

<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
	<h4>@ViewData["Title"]</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Id)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Id)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.FirstName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.FirstName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.SurName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.SurName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Patronymic)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Patronymic)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Age)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Age)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Address)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Address)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Email)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Email)
		</dd>
	</dl>

	<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
		<input type="submit" value="Confirm" class="btn btn-danger" /> |
		<a asp-action="Index">To Employees</a>
	</form>
</div>
