@using OnlineShop.Services.Interfaces
@using OnlineShop.ViewModels
@inject IProductService productservice
@{
	var products = productservice.GetProducts()
								 .OrderBy(p => p.Order)
								 .Take(3)
								 .Select(p => new ProductViewModel
								 {
									 Id = p.Id,
									 Name = p.Name,
									 Price = p.Price,
									 ImageUrl = p.ImageUrl,
									 Order = p.Order
								 });
}
@{ Layout = "_Layout"; }

<section id="slider">
	<partial name="Partial/_Slider" />
</section>

<section>
	<div class="container">
		<div class="row">
			<div class="col-sm-3">
				<div class="left-sidebar">
					<vc:category />
					@*<partial name="Partial/_Category" />*@
					<vc:brands />
					@*<partial name="Partial/_Brands" />*@
					<partial name="Partial/_Price" />
					<div class="shipping text-center">
						<!--shipping-->
						<img src="~/images/home/shipping.jpg" alt="" />
					</div><!--/shipping-->

				</div>
			</div>

			<div class="col-sm-9 padding-right">
				<partial name="Partial/_Features" model="products"/>
				<partial name="Partial/_Tabs" />
				<partial name="Partial/_Recommended" />
			</div>
		</div>
	</div>
</section>