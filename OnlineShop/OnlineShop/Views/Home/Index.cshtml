@model IEnumerable<OnlineShop.Models.Employee>
<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Сотрудники</title>
</head>
<body>
	<h3>Сотрудники</h3>
	<table>
		<thead>
			<tr>
				<th>#</th>
				<th>Фамилия</th>
				<th>Имя</th>
				<th>Отчество</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						<a href="~/Home/SelectedEmployee/+@item.Id">@item.Id</a>
					</td>
					<td>@item.FirstName</td>
					<td>@item.SurName</td>
					<td>@item.Patronymic</td>
				</tr>
			}
		</tbody>
	</table>
</body>
</html>
