@model CatalogViewModel
@{
	Layout = "_Layout";
	ViewData["Title"] = "Shop catalog";
}

<section id="advertisement">
	<div class="container">
		<img src="~/images/shop/advertisement.jpg" alt="" />
	</div>
</section>

<section>
	<div class="container">
		<div class="row">
			<div class="col-sm-3">
				<div class="left-sidebar">
					<vc:category />
					@*<partial name="Partial/_Category" />*@
					<vc:brands />
					@*<partial name="Partial/_Brands" />*@
					<partial name="Partial/_Price" />
					<div class="shipping text-center">
						<!--shipping-->
						<img src="~/images/home/shipping.jpg" alt="" />
					</div><!--/shipping-->

				</div>
			</div>

			<div class="col-sm-9 padding-right">
				<partial name="Partial/_Features" model="Model.Products" />
			</div>
		</div>
	</div>
</section>