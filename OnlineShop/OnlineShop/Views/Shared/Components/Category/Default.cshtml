@model IEnumerable<OnlineShop.ViewModels.CategoryViewModel>
<h2>Category</h2>
<div class="panel-group category-products" id="accordian">
	<!--category-products-->
	@foreach (var parent in Model)
	{
		if (parent.Child.Count > 0)
		{
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						<a data-toggle="collapse"
						   data-parent="#accordian"
						   href="#@parent.Name.ToLower()">
							<span class="badge pull-right">
								<i class="fa fa-plus"></i>
							</span>
							@parent.Name
						</a>
					</h4>
				</div>
				<div id="@parent.Name.ToLower()"
					 class="panel-collapse collapse">
					<div class="panel-body">
						<ul>
							@foreach (var child in parent.Child)
							{
								<li>
									<a asp-controller="Products" asp-action="Index" asp-route-CategoryId="@child.Id">
										@child.Name
								</a>
							</li>
						}
						</ul>
					</div>
				</div>
			</div>
		}
		else
		{
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						<a asp-controller="Products" asp-action="Index" asp-route-CategoryId="@parent.Id">
							@parent.Name
						</a>
					</h4>
				</div>
			</div>
		}
	}
</div><!--/category-products-->
